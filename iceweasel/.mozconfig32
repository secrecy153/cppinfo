# This file specifies the build flags for Firefox.  You can use it by adding:
# to the top of your mozconfig file.
. $topsrcdir/browser/config/mozconfig
ac_add_options --with-app-name=Iceweasel

mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/../obju-vc
mk_add_options MOZ_MAKE_FLAGS=-j4

export MOZ_OPTIMIZE_LDFLAGS="-opt:ref,icf -LARGEADDRESSAWARE F:/works/libportable/x86/portable32.lib"
mk_add_options MOZ_OPTIMIZE_LDFLAGS="-opt:ref,icf -LARGEADDRESSAWARE F:/works/libportable/x86/portable32.lib"
ac_add_options --disable-auto-deps
ac_add_options --disable-tests
ac_add_options --disable-ipdl-tests
ac_add_options --disable-installer
ac_add_options --enable-official-branding
ac_add_options --enable-extensions=default
ac_add_options --enable-strip

# for X86
ac_add_options --enable-optimize="-Zi -O2 -Ot -fp:precise -Qpar -GL -arch:SSE2 -DTT_MEMUTIL -FI F:/works/libportable/portable.h"

# diasble updater
ac_add_options --disable-updater
ac_add_options --disable-update-channel
ac_add_options --disable-update-packaging

# diasble crashreporter
ac_add_options --disable-crashreporter

# for debug
ac_add_options --disable-debug
#ac_add_options --enable-debugger-info-modules=no
#ac_add_options --disable-debugger-info-modules
#ac_add_options --disable-debug-symbols

# for auto pgo build
mk_add_options PROFILE_GEN_SCRIPT='$(PYTHON) $(MOZ_OBJDIR)/_profile/pgo/profileserver.py'

# for manual pgo build
ac_add_options --disable-activex
ac_add_options --disable-activex-scripting
ac_add_options --disable-accessibility
ac_add_options --disable-parental-controls
ac_add_options --disable-maintenance-service
ac_add_options --disable-windows-mobile-components
ac_add_options --disable-logging
ac_add_options --enable-crypto

# Enable jemalloc
ac_add_options --enable-jemalloc
ac_add_options --enable-signmar
ac_add_options --enable-profiling

# enable shared js
ac_add_options --enable-shared-js
ac_add_options --enable-js-diagnostics

# enable img
ac_add_options --enable-image-decoders=all


# windows version
ac_add_options --with-windows-version=601

# crt dir
WIN32_REDIST_DIR=$VCINSTALLDIR/redist/x86/Microsoft.VC110.CRT